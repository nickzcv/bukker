<div class="main">

	<div class="pageHeaderBook">
        <i class="ion-ios-book-outline"></i>
		<h1>{{meta_title}}</h1>
	</div>


	<div class="bookPage">
		<div class="cover">
			<img src="{{main-root}}covers/{{book.cover}}" alt="{{book.title}}">
		</div>

		<div class="info">
			<div class="author">
				<i class="ion-ios-person"></i>
				<span>
					{{#each book.authors}}
						<span>{{this.name}}</span>{{#unless @last}},{{/unless}}
					{{else}}
						Автор не известен
					{{/each}}
				</span>
			</div>
			{{#if book.year}}
			<div class="year">
				Книга написана в {{book.year}} г.
			</div>
			{{else}}
				<div class="year">
					Книга добавлена в {{formatDate book.date}} г.
				</div>
			{{/if}}
			<div class="ganres">
				<i class="ion-ios-color-filter-outline"></i>
				<span>
					{{#each book.ganres}}
						<a href="{{main-root}}ganre/{{this.url}}">{{this.title}}</a>{{#unless @last}},{{/unless}}
					{{else}}
						<a href="{{main-root}}ganres/">Все жанры</a>
					{{/each}}
				</span>
			</div>
			<div class="tags">
				<i class="ion-ios-medical"></i>
				<span>
					{{#each book.tags}}
						<a href="{{main-root}}tag/{{this.url}}">{{this.title}}</a>{{#unless @last}},{{/unless}}
					{{else}}
						<span style="color: #ccc">книга не отмечена</span>
					{{/each}}
				</span>
			</div>
			<div class="stars">
				{{#each book.ratings}}
				<div class="ratingBox">
					{{#each this}}
                        <meta name="{{@key}}" content="{{this}}">
					{{/each}}
				</div>

				{{else}}
				<div class="ratingBoxEmpty">
					<i class="ion-android-star-outline"></i><i class="ion-android-star-outline"></i><i class="ion-android-star-outline"></i><i class="ion-android-star-outline"></i><i class="ion-android-star-outline"></i>
				</div>
				{{/each}}
			</div>
			{{#if book.litresid}}
				<div class="litres">
					<a href="http://www.litres.ru/pages/biblio_basket/?art={{book.litresid}}&action=add_art_to_basket&lfrom={{litres_ref_id}}">Купить и скачать электронную книгу</a>
					<br>
					<a class="read" target="_blank" href="http://www.litres.ru/pages/quickread/?art={{book.litresid}}&action=add_art_to_basket&lfrom={{litres_ref_id}}"><i class="ion-ios-bookmarks-outline"></i>Читать онлайн</a>
				</div>
			{{/if}}
		</div>
		<div class="description">
			{{{book.description}}}
		</div>
        <div class="comments">
            <div id="disqus_thread"></div>
        </div>

        <script>
            var disqus_config = function () {
                this.page.url = {{book.url}};
                this.page.identifier = {{book.url}};
            };
            (function() { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');

                s.src = '//bukkeru.disqus.com/embed.js';

                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
	</div>


</div>