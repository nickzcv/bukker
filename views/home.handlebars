<div class="main">

	<div class="pageHeader">
		<h1 id="bukker">Буккер
            <span class="bracket">{</span>
            <span>
                <span class="sub title1 visible">Рейтинги книг <b class="ion-star star"></b></span>
                <span class="sub title2 ">Новинки и Классика <b class="ion-paper-airplane new"></b></span>
                <span class="sub title3 ">Популярные книги и серии <b class="ion-ribbon-b popular"></b></span>
                <span class="sub title4 ">Книжные новости <b class="ion-ios-paper-outline paper"></b></span>
            </span>
            <span class="bracket2">}</span>
        </h1>
	</div>
    <h2>Новые книги:</h2>
	<div class="book-list">
		{{#each book}}
		<div class="book">
            <div class="cover">
                <!--<div class="overlay"></div>-->
                <a href="/book/{{url}}"><img src="covers/{{cover}}" title="{{title}}"></a>
            </div>
			<a href="/book/{{url}}" class="title">{{title}}</a>
			<div class="author">
				{{#each authors}}
					{{this.name}}{{#unless @last}},{{/unless}}
				{{/each}}
			</div>
			<div class="stars">
				{{#each ratings}}
					{{#if @first}}
					<div class="ratingBox">
						{{#each this}}
							<meta {{@key}}="{{this}}">
						{{/each}}
					</div>
					{{/if}}
				{{else}}
					<div class="ratingBoxEmpty">
						<i class="ion-android-star-outline"></i>
						<i class="ion-android-star-outline"></i>
						<i class="ion-android-star-outline"></i>
						<i class="ion-android-star-outline"></i>
						<i class="ion-android-star-outline"></i>
					</div>
				{{/each}}
			</div>
		</div>
		{{/each}}
	</div>

</div>